<body>
  <!-- Top Navbar -->
  <div class="top-bar">
    <div class="top-bar-left">
      <h1 style="font-family: SignPainter; color: rgb(46,185,94)">Get-A-Gig</h1>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        <li>
          <input type="search" placeholder="Search">
        </li>
        <li>
          <button type="button" class="button">Search</button>
        </li>
      </ul>
    </div>
  </div>
  <!-- Form -->
  <form>
    <div class="grid-container fluid" style="margin-top: 60px">
      <div class="grid-x">
        <div class="cell small-3"></div>
        <div class="cell small-6" style="border: 2px solid grey">
          <div class="grid-x grid-padding-x">
            <div class="medium-12 cell">
              <label>
                <h6><b>Name of Gig</b></h6>
                <input type="text" placeholder="Labor Gig">
              </label>
            </div>
            <div class="medium-12 cell">
              <label>
                <h6><b>Location</b></h6>
                <input type="text" placeholder="1st & Speedway">
              </label>
            </div>
          </div>

          <div class="grid-x grid-padding-x">
            <div class="medium-12 cell">
              <label>
                <h6><b>Gig Category</b></h6>
                <select>
                  <option value="">Pick an option</option>
                  <option value="general_labor">General Labor</option>
                  <option value="assembly">Assembly</option>
                  <option value="moving">Moving/Packing</option>
                  <option value="cleaning">Cleaning</option>
                </select>
              </label>
            </div>
          </div>
          <div class="grid-x grid-padding-x">
            <div class="medium-12 cell">
              <label>
                <h6><b>Gig Description</b></h6>
                <textarea placeholder="Description" style="height:100px"></textarea>
              </label>
            </div>
          </div>
          <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
              <label>
                <h6><b>Start Date</b></h6>
                <input type="date" class="span2" value="02/16/12" data-date-format="mm/dd/yy" id="dp2">
              </label>
            </div>
            <div class="medium-6 cell">
              <label>
                <h6><b>End Date</b></h6>
                <input type="date" placeholder=".medium-6.cell">
              </label>
            </div>
          </div>
          <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
              <label>
                <h6><b>How much does this gig pay?</b></h6>
                <input type="number" placeholder="$40.00" value="">
              </label>
            </div>
            <div class="medium-6 cell">
              <button type="button" class="success button" style="margin-top: 26px">Submit</button>

            </div>
          </div>
        </div>
        <div class="cell small-3"></div>
      </div>
    </div>
  </form>

</body>